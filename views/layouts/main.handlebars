        </div>       

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Comment</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
              <div class="form-group">
                <label for="commentName">Your Name</label>
                <input  class="form-control" id="commentName" placeholder="Your Name">
              </div>
              <div class="form-group">
                <label for="commentTxt">Comment</label>
                <textarea class="form-control" id="commentTxt" rows="3"></textarea>
              </div>
              
        </form>
      </div>
      <div class="modal-footer">        
        <button type="button" class="btn btn-primary post" data-dismiss="modal">Post Comment</button>
      </div>
    </div>
  </div>
</div> <!-- END -->

